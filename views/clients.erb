<% if @all_clients.any? %>
  <h3> Your clients: </h3>
  <ul>
    <% @all_clients.each() do |client| %>
      <li><%= client.name() %></li>
    <% end %>
  </ul>
<% else %>
  <h4>You currently have no clients</h4>
<% end %>

<form action="/new_client" method="post">
  <label for="client_name">Name of your client: </label>
  <input id="client_name" name="client_name" type="text">
  <button type="submit" class="btn-success">Add new client</button>
</form>
