<% if @all_stylists.any? %>
  <h3> Your stylists: </h3>
  <ul>
    <% @all_stylists.each() do |stylist| %>
      <li><a href="/single_stylist/<%= stylist.id() %>"><%= stylist.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h4>You currently have no stylists</h4>
<% end %>

<form action="/new_stylist" method="post">
  <label for="stylist_name">Name of new stylist: </label>
  <input id="stylist_name" name="stylist_name" type="text">
  <button type="submit" class="btn-success">Add new stylist</button>
</form>
